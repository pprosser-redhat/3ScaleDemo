---
apiVersion: keycloak.org/v1alpha1
kind: KeycloakClient
metadata:
  name: 3scaleadminportal
  namespace: sso
spec:
  client:
    clientAuthenticatorType: client-secret
    clientId: 3scaleadminportal
    secret: 3scaleadminportal-secret
    directAccessGrantsEnabled: false
    publicClient: false
    redirectUris:
      - "https://{{ api_tenant }}-admin.{{ wildcarddomain }}/*"
      - "https://{{ api_tenant }}.{{ wildcarddomain }}/*"
    rootUrl: "https://{{ api_tenant }}-admin.{{ wildcarddomain }}"
    standardFlowEnabled: true
  realmSelector:
    matchLabels:
      realm: 3scale-realm